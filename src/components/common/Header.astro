---
import { Icon } from 'astro-icon';
import BurgerMenu from '../common/BurgerMenu.astro';
import { createSignal } from 'solid-js';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface MenuLink extends Link {
  links?: Array<Link>;
}

export interface Props {
    links?: Array<MenuLink>;
}
 
const {
    links = [],
} = Astro.props;

